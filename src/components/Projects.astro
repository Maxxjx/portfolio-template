    margin-left: auto;
  }
  
  .project-tech-list {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: var(--space-sm) 0;
    gap: var(--space-xs);
  }
  
  .featured-project:nth-of-type(even) .project-tech-list {
    justify-content: flex-end;
  }
  
  .project-tech-list li {
    font-family: var(--font-mono);
    font-size: var(--fs-sm);
    color: var(--color-text-muted);
    white-space: nowrap;
  }
  
  .project-links {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-top: var(--space-sm);
  }
  
  .featured-project:nth-of-type(even) .project-links {
    justify-content: flex-end;
  }
  
  .project-link {
    color: var(--color-text);
    transition: color var(--transition-normal), transform var(--transition-normal);
  }
  
  .project-link:hover {
    color: var(--color-accent);
    transform: translateY(-3px);
  }
  
  .project-image {
    position: relative;
    z-index: 1;
    max-height: 400px;
    overflow: hidden;
    border-radius: 8px;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%) contrast(1.2);
    mix-blend-mode: multiply;
    transition: all var(--transition-normal);
  }
  
  .project-image:hover img {
    filter: grayscale(10%) contrast(1);
    mix-blend-mode: normal;
  }
  
  .project-image-frame {
    position: absolute;
    top: 15px;
    left: 15px;
    width: 100%;
    height: 100%;
    border: 1px solid var(--color-accent);
    border-radius: 8px;
    z-index: -1;
    transition: all var(--transition-normal);
  }
  
  .project-image:hover .project-image-frame {
    top: 10px;
    left: 10px;
  }
  
  .project-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(10, 14, 23, 0.7);
    transition: opacity var(--transition-normal);
  }
  
  .project-image:hover .project-image-overlay {
    opacity: 0;
  }
  
  /* Other Projects */
  .other-projects-title {
    font-size: var(--fs-lg);
    text-align: center;
    margin: var(--space-xl) 0 var(--space-lg);
    opacity: 0;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-lg);
  }
  
  .project-card {
    background-color: var(--color-bg-alt);
    border-radius: 8px;
    padding: var(--space-lg);
    height: 100%;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    box-shadow: var(--shadow-md);
    position: relative;
    overflow: hidden;
  }
  
  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-alt));
    opacity: 0;
    transition: opacity var(--transition-normal);
  }
  
  .project-card:hover::before {
    opacity: 1;
  }
  
  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }
  
  .folder-icon {
    color: var(--color-accent);
  }
  
  .card-content {
    flex: 1;
  }
  
  .card-title {
    color: var(--color-text);
    font-size: var(--fs-lg);
    margin: 0 0 var(--space-sm) 0;
  }
  
