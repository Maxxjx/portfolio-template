    font-size: var(--fs-lg);
    opacity: 0;
  }
  
  .section-title::after {
    content: '';
    display: block;
    height: 1px;
    width: 250px;
    background: linear-gradient(90deg, var(--color-accent), transparent);
    margin-left: var(--space-sm);
    opacity: 0.5;
  }
  
  /* Featured Projects */
