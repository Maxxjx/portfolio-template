    color: var(--color-text-muted);
    font-size: var(--fs-md);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }
  
  .card-tech-list {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: auto 0 0 0;
    gap: var(--space-sm);
  }
  
  .card-tech-list li {
    font-family: var(--font-mono);
    font-size: var(--fs-sm);
    color: var(--color-text-muted);
  }
  
  /* Responsive styles */
  @media (max-width: 1200px) {
    .featured-project:nth-of-type(odd) .project-content,
    .featured-project:nth-of-type(even) .project-content {
      grid-column: 1 / 9;
    }
    
