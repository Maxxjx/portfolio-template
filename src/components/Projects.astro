    grid-row: 1 / -1;
  }
  
  .featured-project:nth-of-type(even) .project-image {
    grid-column: 1 / 8;
    grid-row: 1 / -1;
  }
  
  .project-content {
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }
  
  .project-overline {
    margin: 0 0 var(--space-xs) 0;
    font-family: var(--font-mono);
    font-size: var(--fs-xs);
  }
  
  .project-title {
    font-size: var(--fs-xl);
    font-weight: var(--fw-medium);
    margin: 0 0 var(--space-sm) 0;
    color: var(--color-text);
  }
  
  .project-description {
    padding: var(--space-md);
    border-radius: 8px;
    margin-bottom: var(--space-md);
    font-size: var(--fs-md);
    line-height: 1.6;
    color: var(--color-text-muted);
    max-width: 500px;
    position: relative;
    z-index: 2;
  }
  
